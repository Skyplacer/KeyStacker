<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_grey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Add more items here -->

        <Button
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:layout_marginStart="132dp"
            android:layout_marginTop="304dp"
            android:backgroundTint="@color/neon_blue"
            android:text="Price"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="348dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="208dp"
            android:background="@color/light_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button5"
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="304dp"
            android:backgroundTint="@color/neon_blue"
            android:text="Genre"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:layout_marginTop="304dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/neon_blue"
            android:text="Platform"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profilepicHome"
            android:layout_width="57dp"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pfp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="334dp"
            android:layout_height="43dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="136dp"
            android:text="Browse Game Catalog"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/game1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="460dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/game3" />

        <ImageView
            android:id="@+id/game2"
            android:layout_width="127dp"
            android:layout_height="165dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/nfs" />

        <ImageView
            android:id="@+id/game4"
            android:layout_width="124dp"
            android:layout_height="180dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="684dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/farcry" />

        <ImageView
            android:id="@+id/game3"
            android:layout_width="137dp"
            android:layout_height="165dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="684dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gta" />

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:src="@drawable/menu_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>